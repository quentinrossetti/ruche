{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": "lib/"
  },
  "opts": {
    "destination": "doc/api/",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  }
}
